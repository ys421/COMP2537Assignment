<%- include("templates/header") %>
<head>
  <style>
    .bordered-column {
      border-style: groove;
      border-width: 13px;
      border-color: grey;
      padding: 15px;
    }

    .uniform-image {
      max-width: 100%;
      max-height: 250px;
      object-fit: contain;
      display: block;
      margin: auto;
    }

    .fancy-frame {
      border: 5px double #8c8c8c;
      padding: 10px;
      box-shadow: inset 0 0 5px #000, 0 0 5px #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  </style>
</head>
<div class="container-fluid">
  <h1>Welcome to the Member's Area, <%= username %>!</h1>
</div>
<div class="container-fluid">
  <h2 style="padding-bottom: 30px">My cute dogs</h2>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-4 bordered-column fancy-frame">
      <img
        src="4.jpeg"
        class="img-responsive uniform-image"
        alt="Dog4"
      />
    </div>
    <div class="col-sm-4 bordered-column fancy-frame">
      <img src="2.jpeg" class="img-responsive uniform-image" alt="Dog2" />
    </div>
    <div class="col-sm-4 bordered-column fancy-frame">
      <img
        src="3.jpeg"
        class="img-responsive uniform-image"
        alt="Dog3"
      />
    </div>
  </div>
  </div>
</div>

<div class="container-fluid" style="padding-top: 50px; padding-bottom: 30px;">
  <a
    class="btn btn-primary"
    href="/"
    role="button"
    style="margin: auto; padding: 10px; font-size: 20px"
    >Home</a
  >
  <a
    class="btn btn-primary"
    href="/logout"
    role="button"
    style="margin: auto; padding: 10px; font-size: 20px"
    >Log out</a
  >
</div>
<%- include("templates/footer") %>
